// services/template-service/tsconfig.json
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",                          // ora la radice è la cartella del service
    "paths": {
      "@common/*": ["../../libs/common/*"]  // mappa l’alias sulla lib comune
    },
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "../../libs/common/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
